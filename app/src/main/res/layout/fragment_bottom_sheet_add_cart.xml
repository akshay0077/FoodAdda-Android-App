<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.BottomSheetAddCartFragment">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/baloo"
            android:text="User Details"
            android:textSize="28sp"
            android:textColor="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/bsFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:autofillHints="true"
            android:background="@drawable/search_bg"
            android:fontFamily="serif"
            android:hint="Full Name"
            android:inputType="text"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/bsPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="true"
            android:background="@drawable/search_bg"
            android:fontFamily="serif"
            android:hint="Phone"
            android:inputType="number"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/bsFullName"
            app:layout_constraintStart_toStartOf="@+id/bsFullName"
            app:layout_constraintTop_toBottomOf="@+id/bsFullName" />

        <EditText
            android:id="@+id/bsAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autofillHints="true"
            android:background="@drawable/search_bg"
            android:fontFamily="serif"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="@+id/bsFullName"
            app:layout_constraintStart_toStartOf="@+id/bsFullName"
            app:layout_constraintTop_toBottomOf="@+id/bsPhone" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Total"
            android:textColor="@color/light_black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/bsAddress"
            app:layout_constraintTop_toBottomOf="@+id/bsAddress" />

        <TextView
            android:id="@+id/bsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"

            android:text="â‚¹ 210"
            android:textColor="@color/orange"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/bsDelivery"
            app:layout_constraintEnd_toEndOf="@+id/bsAddress"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/bsDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Paid Delivery"
            android:textColor="@color/orange"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="10dp"
            android:text="Add To Cart"
            android:background="@drawable/splashbtn_bg"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bsPrice"
            app:layout_constraintStart_toStartOf="@+id/bsDelivery"
            app:layout_constraintTop_toBottomOf="@+id/bsDelivery" />



    </androidx.constraintlayout.widget.ConstraintLayout>
